<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cellular Automata</title>
  <style>
    canvas {
      border: 1px solid black;
    }
  </style>
</head>
<body>
  <h1>Cellular Automata</h1>
  <button onclick="tick()">Tick</button>
  <canvas id="automataCanvas" width="501" height="501"></canvas>
  <script>
    const min = -250;
    const max = 250;
    const size = 501;

    function drawBoard(board) {
      const canvas = document.getElementById('automataCanvas');
      const ctx = canvas.getContext('2d');
      const cellSize = canvas.width / (max - min + 1);

      for (let x = min; x <= max; x++) {
        for (let y = min; y <= max; y++) {
          const state = board[`${x},${y}`] || 0;
          ctx.fillStyle = state === 1 ? 'black' : 'white';
          ctx.fillRect((x - min) * cellSize, (y - min) * cellSize, cellSize, cellSize);
        }
      }
    }

    function tick() {
      fetch('/api/tick')
        .then(response => response.json())
        .then(board => {
          drawBoard(board);
        });
    }

    // Initial draw
    tick();
  </script>
</body>
</html>
